<UserControl x:Class="ShortCutDeckDesktop.MVVM.ShortCutProfileEditor.Views.ShortCutPreviewPlaceHolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShortCutDeckDesktop.MVVM.ShortCutProfileEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border Background="Transparent" 
            BorderThickness="{Binding BorderThickness}" 
            BorderBrush="Silver"
            MouseMove="Border_MouseMove"
            MouseLeave="Border_MouseLeave"
            Drop="Border_Drop"            
            AllowDrop="True">
        <ContentControl x:Name="contentControl" Content="{Binding ShortCutViewModel}"/>
    </Border>
</UserControl>
